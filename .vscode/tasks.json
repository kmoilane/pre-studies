{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Provides debugging feature
                "-ggdb", // "-ggdb" for debugging, "-O2" and "-DNDEBUG" for release
                "-pedantic-errors", // Disables compiler extensions
                "-Wall", // Show all warnings
                "-Werror", // Treat all warnings as errors
                "-Weffc++", // Enables warnings for constructs that violate guidelines in Effective C++ book
                "-Wextra", // Enables extra warnings not turned on by -Wall
                "-Wconversion", // Quite same as below
                "-Wsign-conversion", // Warns if making unsafe, implicit conversions between signed and unsidgned types
                "-std=c++20", // Language standard (c++20)
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
